<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("./partials/head") %>
  <title>HomePage</title>
</head>
<body>

  <%- include("./partials/nav") %>

  <div class="container mt-4">
    <h1><%= blog.title %></h1>
    <img src="<%= blog.coverImageURL %>" width="400px" class="mt-2">
    <pre class="mt-3"><%= blog.body %></pre>
    
    <img src="<%= blog.createdBy.profileURL %>" width="50px" class="mt-2"> 
    <span style="font-size: 25px;  padding: 5px;"><%= blog.createdBy.fullName %></span>
    
  </div>
  <div class="container mt-4">
    <h3>Comments</h3>
    <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="post">
        <input type="text" name="comment" id="comment" placeholder="comment" class="form-control">
        <button type="submit" class="btn btn-primary mt-4">Add</button>
      </form>
      <% } %>
      
      
      
      <% commentId2.forEach(comment1 => { %>
        <div class="container mt-4">
        <img src="<%= comment1.createdBy.profileURL %>" width="25px" class="mt-2"> 
        <span style="font-size: 15px;  padding: 5px;"><%= comment1.createdBy.fullName %></span>
      
      <span style="font-size: 12px;  padding: 5px;"><%= comment1.comment %></span></div>
    <% }) %>
  </div>
  

  
  <%- include("./partials/script") %>
</body>
</html>